<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp"
    android:paddingTop="2dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@android:color/transparent">

    <Button
        android:id="@+id/choose_time_button"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/attach_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="6dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/icn_add_time"
        android:drawablePadding="8dp"
        android:background="@drawable/style_button_add_entry"
        android:text="@string/date_dialog"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/darkestGray"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/attach_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:padding="6dp"
        android:background="@drawable/style_button_add_entry"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_attachment" />

</RelativeLayout>