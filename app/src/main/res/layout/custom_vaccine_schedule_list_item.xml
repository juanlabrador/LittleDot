<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vaccine_detail_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/forward"
        android:textColor="@color/text_normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recurring"
        android:layout_toLeftOf="@+id/forward"
        android:id="@+id/vaccine_detail_dose"
        android:layout_below="@+id/vaccine_detail_name"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:textSize="12sp"
        android:textColor="@color/text_list"
        android:layout_marginLeft="15dp"
        android:paddingBottom="15dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/forward"
        android:src="@mipmap/img_forward"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/vaccine_detail_name"
        android:layout_alignParentRight="true" />
</RelativeLayout>