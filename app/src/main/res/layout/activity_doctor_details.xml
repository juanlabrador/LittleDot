<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/photo_doctor"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/circle_image"
                android:src="@mipmap/icn_doctor"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_toRightOf="@+id/photo_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_doctor"
                    android:textColor="@color/text_normal"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/name_baby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="16sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/icn_feed_close"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/separate_line"/>

        <LinearLayout
            android:id="@+id/container_name_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/name_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/separate_line"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_hour_work_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/hours_work_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/separate_line"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/send_doctor_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/img_email"
            android:drawablePadding="12dp"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/style_box_doctor"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/call_doctor_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/img_phone"
            android:drawablePadding="12dp"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/style_box_doctor"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/call_doctor_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/img_phone"
            android:drawablePadding="12dp"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/style_box_doctor"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/address_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/img_location"
            android:drawablePadding="12dp"
            android:textColor="@color/text_normal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/style_box_doctor"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="marquee"
            android:visibility="gone"/>

        <Button
            android:id="@+id/doctor_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:text="@string/details_doctor_button"
            android:textSize="18sp"
            android:background="@drawable/style_button"
            android:textColor="@color/text_feed"
            android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>