<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/text_feed</item>
        <item name="colorControlActivated">@color/text_feed</item>
        <item name="colorAccent">@color/text_feed</item>
        <item name="alertDialogTheme">@style/NormalStyleDialog</item>
